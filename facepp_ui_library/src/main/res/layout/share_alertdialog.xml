<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/shareTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="#212121">

        <ImageButton
            android:id="@+id/btn_cross"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/cross"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Share"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/btn_cross"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sharebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareTitle"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/share1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="37.5dp">

            <ImageButton
                android:id="@+id/share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wechat"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="微信好友"
                android:id="@+id/textView_wechat"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/share_wechat"
                android:layout_alignLeft="@+id/share_wechat"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:layout_marginTop="0dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/share2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="25dp">

            <ImageButton
                android:id="@+id/share_moment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/moment"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="朋友圈"
                android:id="@+id/textView_moment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_marginLeft="0dp"
                android:layout_below="@+id/share_moment"
                android:layout_alignLeft="@+id/share_moment"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/share3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="25dp">

            <ImageButton
                android:id="@+id/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qq"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="qq"
                android:id="@+id/textView_qq"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/share_qq"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:layout_alignParentEnd="false" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/share4"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="25dp">

            <ImageButton
                android:id="@+id/share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/weibo"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="微博"
                android:id="@+id/textView_weibo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/share_weibo"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:layout_alignParentEnd="false"
                android:singleLine="false" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>